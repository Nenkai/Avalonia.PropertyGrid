<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:Avalonia.PropertyGrid.Samples.PainterDemo.Views">
    <Design.PreviewWith>
        <controls:GradientStopView />
    </Design.PreviewWith>

    <Style Selector="controls|GradientStopView">
        <!-- Set Defaults -->
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Orientation="Horizontal">
                    <ColorPicker Color="{Binding Color}"></ColorPicker>
                    <TextBlock Text="{Binding Offset, StringFormat={}{0:F2}}" VerticalAlignment="Center"></TextBlock>
                    <Slider Value="{Binding Offset}" Minimum="0" Maximum="1" VerticalAlignment="Center" Width="100"></Slider>
                </StackPanel>
                
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
