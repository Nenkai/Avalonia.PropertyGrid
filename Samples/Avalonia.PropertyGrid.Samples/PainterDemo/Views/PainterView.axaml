<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pg="clr-namespace:Avalonia.PropertyGrid.Controls;assembly=Avalonia.PropertyGrid"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Avalonia.PropertyGrid.Samples.PainterDemo.Views.PainterView">
    <Grid ColumnDefinitions="3*,Auto,1*">
        <Canvas Grid.Column="0" x:Name="MainCanvas" Background="#282828">
        </Canvas>
        <GridSplitter Grid.Column="1" Width="4" Background="Gray" VerticalAlignment="Stretch"  HorizontalAlignment="Center"
                      ShowsPreview="False"
                      Cursor="SizeWestEast"
                      ></GridSplitter>
        
        <pg:PropertyGrid x:Name="ShapePropertyGrid" Grid.Column="2" DataContext="{Binding SelectedShape}" ShowTitle="True"/>
    </Grid>
</UserControl>
